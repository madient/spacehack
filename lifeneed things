#include <iostream>

using namespace std;

// Функция для расчета энергии
double calculateEnergy(int numPeople, double labEnergy, double schoolEnergy, double personalEnergy,
                       double lifeSupportEnergy, double lightingEnergy, double medicalEnergy) {
    return numPeople * (labEnergy + schoolEnergy + personalEnergy + lifeSupportEnergy + lightingEnergy + medicalEnergy);
}

int main() {
    // Количество людей
    int numPeople = 100000;

    // Энергопотребление на одного человека в месяц (в kWh)
    double labEnergy = 1000;        // Лаборатория
    double schoolEnergy = 500;      // Школа
    double personalEnergy = 200;   // Личное пространство
    double lifeSupportEnergy = 2000; // Система жизнеобеспечения
    double lightingEnergy = 150;    // Освещение
    double medicalEnergy = 100;     // Медицина

    // Расчет общей потребности в энергии
    double totalEnergy = calculateEnergy(numPeople, labEnergy, schoolEnergy, personalEnergy,
                                          lifeSupportEnergy, lightingEnergy, medicalEnergy);

    // Вывод результата
    cout << "Общее потребление энергии для " << numPeople << " человек в месяц: " << totalEnergy / 1000 << " MWh" << endl;
    cout << "Общее потребление энергии для " << numPeople << " человек в год: " << totalEnergy / 1000 * 12 << " MWh" << endl;

    return 0;
}
